<settings>
 	<setting propertyKey="@Properties.totalDistance" title="@Strings.TotalDistance">
		<settingConfig type="numeric" min="0"/>
	</setting>	
	<setting propertyKey="@Properties.maxDistance" title="@Strings.MaxDistance">
		<settingConfig type="numeric" min="0"/>
	</setting>	

    <setting propertyKey="@Properties.totalDistanceYear" title="@Strings.TotalDistanceYear">
        <settingConfig type="numeric" min="0"/>
    </setting>	
    <setting propertyKey="@Properties.totalDistanceMonth" title="@Strings.TotalDistanceMonth">
        <settingConfig type="numeric" min="0"/>
    </setting>	
    <setting propertyKey="@Properties.totalDistanceWeek" title="@Strings.TotalDistanceWeek">
        <settingConfig type="numeric" min="0"/>
    </setting>	
    <setting propertyKey="@Properties.totalDistanceRide" title="@Strings.TotalDistanceRide">
        <settingConfig type="numeric" min="0"/>
    </setting>

    <setting propertyKey="@Properties.totalDistanceLastYear" title="@Strings.TotalDistanceLastYear">
		<settingConfig type="numeric" min="0"/>
	</setting>	
    <setting propertyKey="@Properties.totalDistanceLastMonth" title="@Strings.TotalDistanceLastMonth">
        <settingConfig type="numeric" min="0"/>
    </setting>	

    <setting propertyKey="@Properties.totalDistanceLastWeek" title="@Strings.TotalDistanceLastWeek">
        <settingConfig type="numeric" min="0"/>
    </setting>	

    <setting propertyKey="@Properties.totalDistanceLastRide" title="@Strings.TotalDistanceLastRide">
        <settingConfig type="numeric" min="0"/>
    </setting>	

    <setting propertyKey="@Properties.showColors" title="@Strings.ShowColors">
        <settingConfig type="boolean" />
    </setting>	

    <setting propertyKey="@Properties.showValues" title="@Strings.ShowValues">
        <settingConfig type="boolean" />
    </setting>	

    <setting propertyKey="@Properties.showColorsSmallField" title="@Strings.ShowColorsSmallField">
        <settingConfig type="boolean" />
    </setting>	

    <setting propertyKey="@Properties.showValuesSmallField" title="@Strings.ShowValuesSmallField">
        <settingConfig type="boolean" />
    </setting>	
   
    <setting propertyKey="@Properties.showFocusSmallField" title="@Strings.ShowFocusSmallField" prompt="@Strings.ShowFocusSmallField">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ShowFocusNothing</listEntry>
            <listEntry value="1">@Strings.ShowFocusOdo</listEntry>            
            <listEntry value="2">@Strings.ShowFocusYear</listEntry>
			<listEntry value="3">@Strings.ShowFocusMonth</listEntry>
			<listEntry value="4">@Strings.ShowFocusWeek</listEntry>
			<listEntry value="5">@Strings.ShowFocusRide</listEntry>
			<listEntry value="6">@Strings.ShowFocusFront</listEntry>
			<listEntry value="7">@Strings.ShowFocusBack</listEntry>
			<listEntry value="8">@Strings.ShowFocusCourse</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.showFields" title="@Strings.ShowFields">
        <settingConfig type="alphanumeric" />
    </setting>

</settings>
